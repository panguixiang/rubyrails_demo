!!! 5
%html{ lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title
      = "TalkingSDK 接入平台用户注册"
    = stylesheet_link_tag    "member/passport"
    = javascript_include_tag "member/register"
  %body.w1440
    #page.panel_register{:style=>'padding-top:0px;'}
      .inputarea
        = form_for(resource,:as=>resource_name,:url=>registration_path(resource_name),html:{id:"regForm"}) do |f|
          .title
            %p
            %h1.f30px
              注册
              %span.f24px.identity 多盟后台
          .inputlist
            #email_warn_box.warn_box
              %p#email_warn.warn 邮箱不能为空
              %p.angle
            .email_box.field_with_errors
              = f.email_field :email,:autofocus => true,class:"input_email_n",:style=>"outline: 0;"
          .inputlist
            #pw_warn_box.warn_box
              %p#pw_warn.warn
                密码不能为空
                %p.angle
            .password_box.field_with_errors
              = f.password_field :password,class:"input_password_n",:style=>"outline: 0;"
          .inputlist
            #repw_warn_box.warn_box
              %p#repw_warn.warn
                请输入正确的密码
                %p.angle
            .password_box.field_with_errors
              = f.password_field :password_confirmation,class:"reinput_password_n",:style=>"outline: 0;"
          %div{:style=>'position:relative;'}
            .inputlist{:style=>'margin-bottom:10px;'}
              #verifycode_warn_box.warn_box
                %p#verifycode_warn.warn 请输入正确的4位验证码
                %p.angle
              .verifycode_box.field_with_errors
                %input#verifyCode.input_verifycode_n{:type=>'text',:name=>'capteCode',:style=>'outline: 0;'}
            %div{:style=>'position:absolute;left:240px;top:12px;'}
              #changeId.change #{session[:captCode]}
              %span#changCapte{:style=>'cursor:pointer'} 换一张
            %div
          .bottom
            = f.submit "确 定",class:"shadow btn"
          .tip
            %span #{flash[:error]}
